<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PROLAB</title>
    <link href="~/Resources/css/Theme.css" rel="stylesheet" />
    @Styles.Render("~/Content/bootstrap")
    @Styles.Render("~/Content/fontawesome")
    @RenderSection("styles", required: false)
</head>
<body style="font-size:small;">
    <nav class="navbar navbar-expand static-top" id="nav">
        <a class="navbar-brand mr-1" href="/Home/Index" style="color: darkblue; text-align: center; font-family: Norwester;">
            <img class="d-inline-block align-top" id="worldIcon" src="~/Resources/img/dentistry.png" style="width: 30px; height: 30px;" />
            PROLAB MEDIC    
        </a>

        <button class="btn btn-outline-secondary btn-sm order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>

        <ul class="navbar-nav  d-md-inline-block form-inline ml-auto" style="font-family: Norwester;">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-fw"></i>
                    @{Html.RenderAction("UserName", "Home");}
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    @Html.ActionLink("Cambiar contrasenia", "ChangePassword", "Account", null, new { @class = "actionLink" })
                    <div class="dropdown-divider"></div>
                    <i class="fas fa-sign-out-alt actionLinkIcon"></i>
                    @Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "actionLink" })
                </div>
            </li>
        </ul>
    </nav>

    <div id="wrapper">
        <ul class="sidebar navbar-nav" style="font-family: Norwester;">
            <li class="nav-item active">
                <a class="nav-link" href="/Home/Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            @{Html.RenderAction("LoadMenu", "Home");}
        </ul>

        <div id="content-wrapper" style="font-family: Montserrat;">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>

    <footer style="font-family: Norwester; background-color: #F1F2F2; height:20px;">
        <div class="container my-auto">
            <div class="copyright text-center my-auto">
                <p style="margin: 0px;  width:100%;">
                    <i class="fas fa-copyright" style="color: orangered;"></i>
                    @DateTime.Now.Year PROLAB
                    <i class="fas fa-code" style="color: orangered;"></i> Prolab Web
                </p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/Scripts/jquery")
        @Scripts.Render("~/Scripts/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        $(document).ready(function () {

            // Expande o contrae la navegación lateral
            $("#sidebarToggle").on('click', function (e) {
                e.preventDefault();
                $("body").toggleClass("sidebar-toggled");
                $(".sidebar").toggleClass("toggled");
            });

        });

        $(window).resize(function () {
            if ($(window).width() <= 490) {
                $("#userName").hide();
            } else {
                $("#userName").show();
            }
        });
    </script>
</body>
</html>